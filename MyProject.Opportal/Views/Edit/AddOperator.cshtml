@model MyProject.EntitiesModel.Operator
@{
    ViewBag.Title = "添加管理员";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <script src="~/Scripts/md5.encrypt.js"></script>
    <style type="text/css">
        .errorMsg {
            color: red;
        }

        .btnBlue, .btnBlue:hover {
            background: #538EC6;
            color: white;
        }
    </style>
    <script type="text/javascript">
         function mySubmit() {
             $('#Password').val(hex_md5($('#Password').val()).toUpperCase());
            return true;
        }
    </script>
}
<form class="form-horizontal" style="margin:0 auto;" action="/Edit/AddOperator" method="post">
    <div class="form-group">
        <label class="col-sm-2 control-label">管理员账号：</label>
        <div class="col-sm-10">
            @Html.EditorFor(o => o.OperatName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(o => o.OperatName,null,new { @class="errorMsg"})
        </div>       
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">密码：</label>
        <div class="col-sm-10">
            @Html.EditorFor(o => o.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(o => o.Password, null, new { @class = "errorMsg" })
        </div>
        <div class="errorMsg">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btnBlue btn-lg" onclick="return mySubmit();">注册</button>
            <span>@ViewBag.ErrorMsg</span>
        </div>
    </div>
</form>
