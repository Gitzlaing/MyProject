<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8;" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/layOut.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body>
    <div id="header-container">
        <table width="100%" id="header" cellspacing="0">
            <tr>
                <td>
                    <table width="100%">
                        <tr>
                            <td align="left" valign="bottom" id="header-name">网络招聘</td>
                            <td align="right" valign="top" id="header-right">
                                <a href="#" class="admin-out">注销</a>
                                <a href="/login" class="admin-home">首页</a>
                                <span>
                                    <script src="~/Scripts/clock.js"></script>
                                    <script>showcal();</script>
                                </span>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr><td align="left" valign="top" id="header-admin">后台管理系统</td></tr>
        </table>
    </div>
    <div style="width:100%;display:flex;">
        <div id="left">
            <div id="left-top">
                <span>用户名：@ViewBag.UserName <br />类型:@ViewBag.TypeName</span>
            </div>
            <div class="sdmenu">
                <div>
                    <span>系统设置</span>
                    <a href="/Home/Main">首页</a>
                    <a href="/Edit/index">管理员设置</a>
                </div>
                <div>
                    <span>企业管理</span>
                    <a href="/Company/index">企业列表</a>
                    <a href="#">企业留言</a>
                </div>
                <div>
                    <span>用户管理</span>
                    <a href="/User/index">用户列表</a>
                </div>
            </div>
        </div>
        <div id="right-content">
            @RenderBody()
        </div>
    </div>
    <div style="border-top:4px solid #538EC6;margin-top:0px;">
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序 Power By LiuZhuLiang</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
