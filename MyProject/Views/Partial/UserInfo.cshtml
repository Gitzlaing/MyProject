@model MyProject.EntitiesModel.UserInfo
@{
    List<SelectListItem> list = new List<SelectListItem>();
    list.Add(new SelectListItem() { Text = "男", Value = "True" });
    list.Add(new SelectListItem() { Text = "女", Value = "False" });
}
<style type="text/css">
    #addUserInfoBox {
        height: 690px;
        width: 600px;
    }

        #addUserInfoBox th {
            text-align: right;
        }

    .tip {
        color: red;
        width: 280px;
    }

    #Describe {
        width: 400px;
        height: 200px;
    }
</style>
<table id="addUserInfoBox">
    <tr>
        <th valign="top">照片：</th>
        <td>
            @if (Model != null)
            {
                <div style="position:relative;">
                    <a href="javascript:;">
                        <img class="img-thumbnail" style="width:120px;height:150px;" id="thumbImg" src=@(Model.Avatar == null ? "/Images/AvatarDefault.png" : "/User/Edit/GetAvatarImg") />
                        <input type="file" id="image" name="image" style="position:absolute;z-index:2;opacity:0; top:0;left:0;background-color:transparent; color:transparent; width:120px;height:150px;cursor:pointer;" onchange="$('#upload-Avatarinfo').html($(this).val()); " />
                        @*$('#thumbImg').attr('src', window.URL.createObjectURL($(this)[0].files[0])); 本地路径获取方法 *@
                    </a>
                </div>
            }
            else
            {
                <div style="position:relative;">
                    <a href="javascript:;">
                        <img class="img-thumbnail" style="width:120px;height:150px;" id="thumbImg" src= "/Images/AvatarDefault.png" />
                        <input type="file" id="image" name="image" style="position:absolute;z-index:2;opacity:0; top:0;left:0;background-color:transparent; color:transparent; width:120px;height:150px;cursor:pointer;" onchange="$('#upload-Avatarinfo').html($(this).val()); " />
                        @*$('#thumbImg').attr('src', window.URL.createObjectURL($(this)[0].files[0])); 本地路径获取方法 *@
                    </a>
                </div>
            }
            <span id="upload-Avatarinfo"></span>
        </td>
    </tr>
    <tr>
        <th>姓名：</th>
        <td>@Html.EditorFor(o => o.Name)</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Name)</td>
    </tr>
    <tr>
        <th>性别：</th>
        <td>@Html.DropDownListFor(o => o.Sex, list, new { htmlAttributes = new { @class = "form-control", style = "width:85px;" } })</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Sex)</td>
    </tr>
    <tr>
        <th>出生日期：</th>
        <td>@Html.EditorFor(o => o.BirthDate, new { htmlAttributes = new { @class = "form-control", style = "width:200px;" } })</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.BirthDate)</td>
    </tr>
    <tr>
        <th>学校：</th>
        <td>@Html.EditorFor(o => o.School)</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.School)</td>
    </tr>
    <tr>
        <th>专业：</th>
        <td>@Html.EditorFor(o => o.Specialty)</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Specialty)</td>
    </tr>
    <tr>
        <th>学历：</th>
        <td>@Html.EditorFor(o => o.Knowledge)</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Knowledge)</td>
    </tr>
    <tr>
        <th>电话：</th>
        <td>@Html.EditorFor(o => o.Tel, new { htmlAttributes = new { @class = "form-control", style = "width:200px" } })</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Tel)</td>
    </tr>
    <tr>
        <th>邮箱：</th>
        <td>@Html.EditorFor(o => o.Email, new { htmlAttributes = new { @class = "form-control", style = "width:200px" } })</td>
        <td class="tip">@Html.ValidationMessageFor(o => o.Email)</td>
    </tr>
    <tr>
        <th align="center" valign="top">自我描述：</th>
        <td colspan="2">@Html.EditorFor(o => o.Describe, new { htmlAttributes = new { @class = "form-control" } })</td>
    </tr>
    <tr>
        <td colspan="2" align="center">
            <input type="submit" id="btnSubmit" value="保存" class="btn btn-primary" style="width:200px;height:45px;" />
        </td>
        <td align="left"><input type="button" name="btnNext" id="btnNext" value="下一步" class="btn btn-primary" onclick="nextSteps(1, 2);" /></td>
    </tr>
</table>
<script type="text/javascript">
    $(":text").addClass("form-control");
    $(":text").attr('style', 'width:200px');
</script>