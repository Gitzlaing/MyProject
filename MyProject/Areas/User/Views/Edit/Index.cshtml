@using MyProject.EntitiesModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/User.css" rel="stylesheet" />
@section head{
    <style type="text/css">
        #myTabs {
            width: 200px;
            height: 700px;
            margin: 0 10px 0 100px;
            float:left;
        }

        #userEdit {
            width: 100%;
            margin-top: 50px;
        }
    </style>
    <script type="text/javascript">
    </script>
}
<h2 style="border-bottom:solid 1px #428BCA;">
    <span>
        个人中心
    </span>
</h2>

<div id="userEdit">
    <ul class="nav nav-pills nav-stacked" id="myTabs">
        <li>
            <div style="text-align:center;vertical-align:bottom; width:200px;height:200px;">
                <img src="/User/Edit/GetAvatarImg" style="width:120px;height:150px;display:block;margin:0 auto;" /> 
                <strong style="font-size:20px;padding-top:5px;">@ViewBag.Name</strong>
            </div>
        </li>
        <li  style="height:35px;background-color:#F5F5F5;line-height:35px;"><span>简历信息</span></li>
        <li>
            <a href="/user/edit/BaseInfo">基本信息</a>
        </li>
        <li>
            <a href="/user/edit/WorkExperience">工作经历</a>
        </li>
        <li>
            <a href="/user/edit/ProjectExperience">项目经验</a>
        </li>
        <li style="height:35px;background-color:#F5F5F5;line-height:35px;"><span>求职信息</span></li>
        <li>
            <a href="/user/job/JobResult">我的申请记录</a>
        </li>
        <li><a href="/user/Message/Notify">消息通知</a></li>
    </ul>
    <div style="width:1000px;height:100%; overflow:hidden; padding:10px;" class="panel panel-default">
        @RenderBody()
    </div>
</div>

<script type="text/javascript">
    var strurl = location.href;
    $("#myTabs li a").each(function () {
        if (strurl.indexOf($(this).attr('href')) > -1 && $(this).attr('href') != '') {
            $(this).parent().addClass('active');
        }
    });
</script>
